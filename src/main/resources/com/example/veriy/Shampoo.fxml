<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>

<?import java.lang.String?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriy.ShampooController">
    <VBox spacing="10" alignment="TOP_CENTER" prefWidth="800" prefHeight="600">
        <!-- TableView for displaying shampoos -->
        <TableView fx:id="shampooTable" prefWidth="750" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="80" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="100" text="Name" />
                <TableColumn fx:id="priceColumn" prefWidth="80" text="Price" />
                <TableColumn fx:id="amountColumn" prefWidth="80" text="Amount" />
                <TableColumn fx:id="expirationColumn" prefWidth="80" text="Expiration" />
                <TableColumn fx:id="hairTypeColumn" prefWidth="80" text="Hair Type" />
                <TableColumn fx:id="volumeColumn" prefWidth="80" text="Volume (ml)" />
            </columns>
        </TableView>

        <!-- Form for adding shampoos -->
        <HBox spacing="10" alignment="CENTER">
            <!-- ID TextField -->
            <TextField fx:id="idField" layoutX="50" layoutY="400" promptText="Enter ID"/>

            <TextField fx:id="nameField" layoutX="150" layoutY="400" promptText="Name"/>
            <TextField fx:id="priceField" layoutX="250" layoutY="400" promptText="Price"/>
            <TextField fx:id="amountField" layoutX="350" layoutY="400" promptText="Amount"/>
            <TextField fx:id="expirationField" layoutX="450" layoutY="400" promptText="Expiration"/>

            <!-- Hair Type ComboBox -->
            <ComboBox fx:id="hairTypeComboBox" layoutX="550" layoutY="450" promptText="Select Hair Type">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Dry"/>
                        <String fx:value="Oily"/>
                        <String fx:value="Normal"/>
                        <String fx:value="Curly"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Volume ComboBox -->
            <ComboBox fx:id="volumeComboBox" layoutX="650" layoutY="450" promptText="Select Volume">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="100"/>
                        <String fx:value="250"/>
                        <String fx:value="500"/>
                        <String fx:value="1000"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <!-- Buttons for adding and deleting products -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="BackButton" onAction="#goToScene" text="Back to KisiselBakim"/>
            <Button text="Add Shampoo" onAction="#handleAddShampoo" />
            <Button text="Delete Selected" onAction="#handleDeleteShampoo" />
        </HBox>
    </VBox>
</StackPane>
