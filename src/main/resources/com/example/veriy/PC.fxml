<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriy.PCController">
    <VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="800"  stylesheets="@PC.css" spacing="10">

        <!-- TableView for displaying PCs -->
        <TableView fx:id="productTable" prefHeight="400" prefWidth="750">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="150" text="Name" />
                <TableColumn fx:id="priceColumn" prefWidth="100" text="Price" />
                <TableColumn fx:id="amountColumn" prefWidth="100" text="Amount" />
                <TableColumn fx:id="screenSizeColumn" prefWidth="100" text="Screen Size" />
                <TableColumn fx:id="ramColumn" prefWidth="100" text="RAM" />
                <TableColumn fx:id="storageColumn" prefWidth="100" text="Storage" />
                <TableColumn fx:id="cpuColumn" prefWidth="100" text="CPU" />
                <TableColumn fx:id="warrantyColumn" prefWidth="100" text="Warranty" />
            </columns>
        </TableView>

        <!-- Form for adding products -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="idField" promptText="Enter ID">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font></TextField>
            <TextField fx:id="nameField" promptText="Enter Name">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font></TextField>
            <TextField fx:id="priceField" promptText="Enter Price">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font></TextField>
            <TextField fx:id="amountField" promptText="Enter Amount">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font></TextField>
            <TextField fx:id="screenSizeField" promptText="Enter Screen Size">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></TextField>

            <!-- ComboBox for RAM with predefined options -->
            <ComboBox fx:id="ramField" promptText="Select RAM">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="8 GB" />
                        <String fx:value="16 GB" />
                        <String fx:value="32 GB" />
                        <String fx:value="64 GB" />
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- ComboBox for Storage with predefined options -->
            <ComboBox fx:id="storageField" promptText="Select Storage">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="256 GB" />
                        <String fx:value="512 GB" />
                        <String fx:value="1 TB" />
                        <String fx:value="2 TB" />
                    </FXCollections>
                </items>
            </ComboBox>

            <ComboBox fx:id="cpuField" promptText="Select CPU">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Intel Core i5" />
                        <String fx:value="Intel Core i7" />
                        <String fx:value="Intel Core i9" />
                        <String fx:value="AMD Ryzen 5" />
                        <String fx:value="AMD Ryzen 7" />
                    </FXCollections>
                </items>
            </ComboBox>

            <TextField fx:id="warrantyField" promptText="Enter Warranty">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font></TextField>
        </HBox>

        <!-- Buttons for adding and deleting products -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleAddProduct" prefHeight="47.0" prefWidth="147.0" text="Add Product"  textFill="#b71e1e">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font>
         </Button>
            <Button onAction="#handleDeleteProduct" prefHeight="47.0" prefWidth="106.0" text="Delete Selected" textFill="#b71e1e">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font>
            </Button>
            <Button fx:id="backButton" onAction="#goToMainScene" prefHeight="45.0" prefWidth="171.0" text="Back to Technology" textFill="#b71e1e">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font>
         </Button>
        </HBox>
    </VBox>
</StackPane>
