<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriy.PhoneController">
    <VBox spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400">
        <!-- Phone TableView -->
        <TableView fx:id="phoneTable" prefWidth="550">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100" />
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100" />
                <TableColumn fx:id="fiveGColumn" text="5G Support" prefWidth="100" />
                <TableColumn fx:id="cameraColumn" text="Cameras" prefWidth="100" />
                <TableColumn fx:id="fastChargingColumn" text="Fast Charging" prefWidth="100" />
            </columns>
        </TableView>

        <!-- Input Fields for Phone Details -->
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="idField" promptText="Enter ID" />
            <TextField fx:id="nameField" promptText="Enter Name" />
            <TextField fx:id="priceField" promptText="Enter Price" />
            <TextField fx:id="amountField" promptText="Enter Amount" />
            <TextField fx:id="cameraField" promptText="Enter Cameras" />
        </HBox>

        <!-- Checkboxes for Phone Features -->
        <HBox spacing="10" alignment="CENTER">
            <CheckBox fx:id="fiveGCheckbox" text="5G Support" />
            <CheckBox fx:id="fastChargingCheckbox" text="Fast Charging" />
        </HBox>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Add Phone" onAction="#addPhone" />
            <Button text="Delete Selected" onAction="#deletePhone" />
        </HBox>
    </VBox>
</StackPane>
