<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.veriy.BottomWearController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="30" prefWidth="500">
        <!-- Başlık -->
        <Label text="BottomWear Bilgileri" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- ID Alanı -->
        <HBox spacing="10">
            <Label text="ID:" prefWidth="100"/>
            <TextField fx:id="idField" promptText="Ürün ID"/>
        </HBox>

        <!-- İsim Alanı -->
        <HBox spacing="10">
            <Label text="İsim:" prefWidth="100"/>
            <TextField fx:id="nameField" promptText="Ürün İsmi"/>
        </HBox>

        <!-- Fiyat Alanı -->
        <HBox spacing="10">
            <Label text="Fiyat:" prefWidth="100"/>
            <TextField fx:id="priceField" promptText="Fiyat"/>
        </HBox>

        <!-- Miktar Alanı -->
        <HBox spacing="10">
            <Label text="Miktar:" prefWidth="100"/>
            <TextField fx:id="amountField" promptText="Stok Miktarı"/>
        </HBox>

        <!-- Beden Alanı -->
        <HBox spacing="10">
            <Label text="Beden:" prefWidth="100"/>
            <TextField fx:id="sizeField" promptText="Beden"/>
        </HBox>

        <!-- Renk Alanı -->
        <HBox spacing="10">
            <Label text="Renk:" prefWidth="100"/>
            <TextField fx:id="colorField" promptText="Renk"/>
        </HBox>

        <!-- Kumaş Alanı -->
        <HBox spacing="10">
            <Label text="Kumaş:" prefWidth="100"/>
            <TextField fx:id="clothField" promptText="Kumaş"/>
        </HBox>

        <!-- Cinsiyet Alanı -->
        <HBox spacing="10">
            <Label text="Cinsiyet:" prefWidth="100"/>
            <TextField fx:id="genderField" promptText="Cinsiyet"/>
        </HBox>

        <!-- Cepli mi Alanı -->
        <HBox spacing="10">
            <Label text="Cepli:" prefWidth="100"/>
            <CheckBox fx:id="hasPocketsCheckBox"/>
        </HBox>

        <!-- İşlem Butonları -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Kaydet" fx:id="saveButton" onAction="#saveBottomWear"/>
            <Button text="İptal" fx:id="cancelButton" onAction="#cancelAction"/>
        </HBox>
    </VBox>
</AnchorPane>
