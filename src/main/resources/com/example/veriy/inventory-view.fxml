<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriy.InventoryController" spacing="10" alignment="CENTER">
    <children>
        <TextField fx:id="nameField" promptText="Product Name" />
        <TextField fx:id="priceField" promptText="Price" />
        <TextField fx:id="quantityField" promptText="Quantity" />

        <HBox spacing="10">
            <Button text="Add Product" onAction="#addProduct" />
            <Button text="Delete Product" onAction="#deleteProduct" />
            <Button text="Update Product" onAction="#updateProduct" />
        </HBox>

        <TableView fx:id="productTable" prefHeight="200" prefWidth="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100" />
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100" />
            </columns>
        </TableView>
    </children>
</VBox>
