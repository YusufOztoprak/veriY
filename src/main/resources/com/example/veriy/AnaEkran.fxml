<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriy.MainController">
    <children>
        <VBox alignment="CENTER" spacing="20">
         <Label prefHeight="47.0" prefWidth="265.0" text="                              KATEGORİLER" textFill="#232222">
            <font>
               <Font name="Arial Bold" size="12.0" />
            </font></Label>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="technologyButton" onAction="#openTechnologyScene" prefHeight="122.0" prefWidth="180.0" text="Teknoloji" textFill="#ac2626">
                    <font>
                        <Font name="Arial Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="clothingButton" onAction="#openClothingScene" prefHeight="122.0" prefWidth="180.0" text="Giyim" textFill="#ac2626">
                    <font>
                        <Font name="Arial Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="personalCareButton" onAction="#openPersonalCareScene" prefHeight="122.0" prefWidth="180.0" text="K. Bakım" textFill="#ac2626">
                    <font>
                        <Font name="Arial Bold" size="12.0" />
                    </font>
                </Button>
            </HBox>
            <Button fx:id="ExitButton"  onAction="#exit" prefHeight="26.0" prefWidth="79.0" text="Exit" textFill="#ac2626">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>
        </VBox>
    </children>
</StackPane>
