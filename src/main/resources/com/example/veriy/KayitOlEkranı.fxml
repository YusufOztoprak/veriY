<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="780" prefWidth="1540.0" stylesheets="@KayitEkranı.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriy.KayitOlEkranı">
    <children>
        <Label prefHeight="125.0" prefWidth="560.0" text="                                                       User Sign in Screen">
            <font>
                <Font name="Arial Bold" size="12.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="32.0" prefWidth="516.0" spacing="10.0">
            <children>
                <Label prefHeight="16.0" prefWidth="184.0" text="                 New User Name:" />
                <TextField fx:id="yeniKullaniciAdiField" prefHeight="30.0" prefWidth="265.0" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label prefHeight="28.0" prefWidth="163.0" text="             New Password:" />
                <PasswordField fx:id="yeniSifreField" prefHeight="31.0" prefWidth="243.0" />
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="50.0" spacing="20.0">
            <children>
                <Button onAction="#handleKayitOl" prefHeight="40.0" prefWidth="150.0" text="Sign in" />
                <Button fx:id="BackButton" onAction="#goToMainScene" prefHeight="40.0" prefWidth="150.0" text="Back" />
            </children>
        </HBox>
        <Label fx:id="mesajLabel" prefHeight="38.0" prefWidth="560.0" />
    </children>
</VBox>
