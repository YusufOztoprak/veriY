<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" stylesheets="@GirisEkranı.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriy.GirisEkranı">

    <children>
      <Label prefHeight="149.0" prefWidth="400.0" text="                                Kullanıcı Giriş Ekranı">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Kullanıcı Adı" />
            <TextField fx:id="kullaniciAdiField" prefHeight="9.0" prefWidth="252.0" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Şifre" />
            <PasswordField fx:id="sifreField" prefWidth="200.0" />
        </HBox>

        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#handleGiris" prefHeight="32.0" prefWidth="137.0" text="Giriş Yap" />
            <Button onAction="#handleKayitOl" prefHeight="32.0" prefWidth="121.0" text="Kayıt Ol" />
        </HBox>

        <Label fx:id="mesajLabel" prefHeight="63.0" prefWidth="387.0" textFill="red" />
    </children>

</VBox>
