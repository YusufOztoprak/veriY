<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="780" prefWidth="1540.0" stylesheets="@GirisEkranı.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriy.GirisEkranı">

    <children>
      <Label prefHeight="149.0" prefWidth="400.0" text="                                     User Login Screen ">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Username" />
            <TextField fx:id="kullaniciAdiField" prefHeight="29.0" prefWidth="205.0" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Password" />
            <PasswordField fx:id="sifreField" prefWidth="200.0" />
        </HBox>

        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#handleGiris" prefHeight="32.0" prefWidth="137.0" text="Login" />
            <Button onAction="#handleKayitOl" prefHeight="32.0" prefWidth="121.0" text="Sign in" />
        </HBox>

        <Label fx:id="mesajLabel" prefHeight="63.0" prefWidth="387.0" textFill="red" />
    </children>

</VBox>
